{{>layouts/header}}
<h1>상품 문의하기</h1>

{{#ticket}}
    <div>
        <h2>상품 정보</h2>
        <p><strong>상품명</strong> {{product.name}}</p>
        <p><strong>상품 설명</strong> {{product.description}}</p>
    </div>
{{/ticket}}

<form action="/ticket" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{ticketForm.title}}" required/>
    <br/>

    <label for="content">Content:</label>
    <textarea id="content" name="content" required>{{ticketForm.content}}</textarea>
    <br/>

    {{#ticket.product}}
        <input type="hidden" name="productId" value="{{ticket.product.id}}"/>
    {{/ticket.product}}

    <button type="submit">Submit</button>
</form>
{{>layouts/footer}}
