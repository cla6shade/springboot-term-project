{{>layouts/header}}
<div class="flex flex-col items-center gap-5 py-5 px-3">
    <div class="bg-white shadow rounded-lg px-5 py-5 w-full max-w-[1200px]">
        <div class="flex flex-col md:flex-row items-start w-full gap-10">
            <img src="https://picsum.photos/200" alt="{{product.name}}" class="w-full rounded-lg max-w-[300px] lg:max-w-[400px]">
            <div class="flex flex-col">
                <h1 class="text-3xl font-bold mb-2">{{product.name}}</h1>
                <p class="text-gray-600 mb-4">{{product.description}}</p>
                <p class="text-lg font-semibold text-gray-800 mb-2">가격: ${{product.price}}</p>
                <p class="text-sm text-gray-500">남은 수량: {{product.stock}}</p>
                <p class="text-sm text-gray-500 mb-4">카테고리: {{product.category.name}}</p>
                <div class="flex flex-col gap-2">
                    <a class="rounded-lg px-3 py-2 bg-amber-400 w-[200px] hover:bg-amber-300 cursor-pointer flex justify-center">
                        구매
                    </a>
                    <a class="rounded-lg px-3 py-2 border border-amber-400 w-[200px] hover:bg-amber-300 cursor-pointer flex justify-center">
                        장바구니에 담기
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg px-5 py-5 w-full max-w-[1200px]">
        <h2 class="text-2xl font-semibold mb-4">상품 후기</h2>
        {{#reviews}}
            <div class="border-b border-gray-200 pb-4 mb-4">
                <h3 class="text-lg font-bold">{{title}}</h3>
                <div class="flex items-center text-yellow-500 mb-2">
                    {{#stars}}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 fill-current" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.165c.969 0 1.372 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.286 3.957c.3.921-.755 1.688-1.54 1.118l-3.37-2.448a1 1 0 00-1.175 0l-3.37 2.448c-.784.57-1.839-.197-1.54-1.118l1.286-3.957a1 1 0 00-.364-1.118L2.07 9.384c-.784-.57-.381-1.81.588-1.81h4.165a1 1 0 00.95-.69l1.286-3.957z"/></svg>
                        {{stars}}
                    {{/stars}}
                </div>
                <p class="text-gray-700">{{content}}</p>
                <p class="text-sm text-gray-500">By: {{member.name}}</p>
            </div>
        {{/reviews}}
        {{^reviews}}
            <p class="text-gray-500">No reviews yet.</p>
        {{/reviews}}
    </div>
</div>
{{>layouts/footer}}